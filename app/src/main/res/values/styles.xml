<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppDialogTheme" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorBackground</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.Toolbar.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FalseAccent" parent="AppTheme">
        <item name="colorAccent">@color/colorSecondaryDark</item>
    </style>
</resources>
